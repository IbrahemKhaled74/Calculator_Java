<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".2"
        android:gravity="center_vertical"
        tools:text="1233456"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <LinearLayout
        app:layout_constraintHeight_percent=".2"
        android:id="@+id/liner1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:orientation="horizontal"

        >

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="@string/button_7" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="8" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="9" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onOperation"
            android:text="/" />


    </LinearLayout>
    <LinearLayout
        app:layout_constraintHeight_percent=".2"
        android:id="@+id/liner2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/liner1"
        android:orientation="horizontal"

        >

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="4" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="5" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="6" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onOperation"
            android:text="*" />


    </LinearLayout>
    <LinearLayout
        app:layout_constraintHeight_percent=".2"
        android:id="@+id/liner3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/liner2"
        android:orientation="horizontal"

        >

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="1" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="2" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="3" />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onOperation"
            android:text="+" />


    </LinearLayout>
    <LinearLayout
        app:layout_constraintHeight_percent=".2"
        android:id="@+id/liner4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@id/liner3"
        android:orientation="horizontal"

        >

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="." />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickButton"
            android:text="0" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:onClick="equalButton"
            style="@style/buttonStyle"
            />

        <Button
            style="@style/buttonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onOperation"
            android:text="-" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>